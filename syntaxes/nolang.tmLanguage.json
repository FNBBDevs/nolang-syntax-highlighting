{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.nolang",
  "fileTypes": [".nl"],
  "name": "Nolang Programming Language",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#number"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        { "match": "^(if|else|for|while)$", "name": "keyword.control.nolang" }
      ]
    },
    "comments": {
      "patterns": [
        { "match": "#.*", "name": "comment.line.number-sign.nolang" }
      ]
    },
    "strings": {
      "patterns": [
        { "begin": "'", "end": "'", "name": "string.quoted.single.nolang" },
        { "begin": "\"", "end": "\"", "name": "string.quoted.double.nolang" }
      ]
    },
    "number": {
      "patterns": [
        { "match": "^-?[0-9]+(\\.[0-9]+)?$", "name": "number.nolang" }
      ]
    },
    "paren-expression": {
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group"
    }
  }
}
