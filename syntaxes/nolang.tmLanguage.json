{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.nolang",
  "fileTypes": [".nl"],
  "name": "Nolang Programming Language",
  "patterns": [
    {
      "include": "#keywords"
    },
    {
      "include": "#comments"
    },
    {
      "include": "#strings",
      "patterns": [{"include": "#escape"}]
    },
    {
      "include": "#number"
    },
    {
      "include": "#bool"
    },
    {
      "include": "#control"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#paren-expression"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        { "match": "\\b(if|else|for|while)\\b", "name": "keyword.control" }
      ]
    },
    "comments": {
      "patterns": [
        { "match": "^#.*$", "name": "comment.line.number-sign" }
      ]
    },
    "strings": {
      "patterns": [
        { "begin": "'", "end": "'", "name": "string.quoted.single", "match": ""},
        { "begin": "\"", "end": "\"", "name": "string.quoted.double" }
      ]
    },
    "number": {
      "patterns": [
        { "match": "-?[0-9]+(\\.[0-9]+)?", "name": "constant.numeric" }
      ]
    },
    "bool": {
      "patterns": [
        { "match": "\\b(True|False)\\b", "name": "constant.language.boolean" }
      ]
    },
    "escape": {
      "patterns": [
        { "match": "(\\'|\\\"|\\n|\\r|\\b|\\v|\\v|\\t)", "name": "constant.character.escape" }
      ]
    },
    "control": {
      "patterns": [
        { "match": "\\b(and|or|not)\\b", "name": "keyword.operator" }
      ]
    },
    "variable": {
      "patterns": [
        { "match": "\\b(no)\\b", "name": "storage.type" }
      ]
    },
    "paren-expression": {
      "begin": "\\(",
      "end": "\\)",
      "beginCaptures": {
        "0": { "name": "punctuation.paren.open" }
      },
      "endCaptures": {
        "0": { "name": "punctuation.paren.close" }
      },
      "name": "expression.group",
      "include": "paren-expression"
    }
  }
}

