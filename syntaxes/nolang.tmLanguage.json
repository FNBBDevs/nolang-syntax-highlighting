{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "scopeName": "source.nolang",
  "fileTypes": [".nl"],
  "name": "Nolang Programming Language",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#control"
    },
    {
      "include": "#variable"
    },
    {
      "include": "#bool"
    },
    {
      "include": "#number"
    },
    {
      "include": "#keyword-function"
    },
    {
      "include": "#paren-expression"
    },
    {
      "include": "#strings"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        { "match": "\\b(if|else|for|while)\\b", "name": "keyword.control" }
      ]
    },
    "comments": {
      "patterns": [{ "match": "#.*$", "name": "comment.line.number-sign" }]
    },
    "number": {
      "patterns": [
        { "match": "-?[0-9]+(\\.[0-9]+)?", "name": "constant.numeric" }
      ]
    },
    "bool": {
      "patterns": [
        {
          "match": "\\b(True|False|nol)\\b",
          "name": "constant.language.boolean"
        }
      ]
    },
    "escape-char": {
      "patterns": [{ "match": "\\.", "name": "constant.character.escape" }]
    },
    "control": {
      "patterns": [
        { "match": "\\b(and|or|not)\\b", "name": "keyword.operator" }
      ]
    },
    "variable": {
      "patterns": [{ "match": "\\b(no)\\b", "name": "storage.type" }]
    },
    "keyword-function": {
      "patterns": [{ "match": "(nolin|nolout)", "name": "support.function" }]
    },
    "word": {
      "patterns": [{ "match": "[a-zA-Z0-9_]+" }]
    },
    "strings": {
      "patterns": [
        { "begin": "'", "end": "'", "name": "string.quoted.single" },
        { "begin": "\"", "end": "\"", "name": "string.quoted.double" },
        { "incude": "#escape-char" },
        { "include": "#word" }
      ]
    },
    "paren-expression": {
      "begin": "\\(",
      "end": "\\)",
      "patterns": [
        { "include": "#strings" },
        { "include": "#paren-expression" }
      ]
    }
  }
}
